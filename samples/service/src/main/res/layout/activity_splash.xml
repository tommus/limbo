<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:padding="@dimen/size_p8">

  <!-- region Service -->

  <com.google.android.material.button.MaterialButton
    android:id="@+id/startServiceButtonView"
    android:layout_width="@dimen/size_auto"
    android:layout_height="wrap_content"
    android:text="@string/splash_start_service"
    app:layout_constraintBottom_toTopOf="@+id/stopServiceButtonView"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0"
    app:layout_constraintVertical_chainStyle="packed"/>

  <com.google.android.material.button.MaterialButton
    android:id="@+id/stopServiceButtonView"
    android:layout_width="@dimen/size_auto"
    android:layout_height="wrap_content"
    android:text="@string/splash_stop_service"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/startServiceButtonView"/>

  <!-- endregion -->

</androidx.constraintlayout.widget.ConstraintLayout>
